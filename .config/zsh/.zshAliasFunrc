#!/bin/sh

fpath_completion=/usr/share/zsh/site-functions/_*
fpath+="$(dirname "${fpath_completion}")"
unset fpath_completion

# Use nvim instead of vim
#[ -x "$(command -v nvim)" ] && alias vim="nvim" vimdiff="nvim -d"

# What should be the normal behaviour
alias \
	snvim='sudo -E nvim' \
	n='nvim' \
    v='nvim' \
	zzz='systemctl suspend' \
	cd..='cd ..' \
	cp='cp -iv' \
	mv='mv -iv' \
	rm='rm -v' \
	rd='rmdir' \
	l='ls -lAhX --group-directories-first --color=auto' \
	ls='ls -F --color=auto' \
	e='exa -lah --icons --colour-scale --group-directories-first --git' \
	et='exa -lah --icons --colour-scale --group-directories-first --git -T -L4' \
	bat='bat --italic-text=always' \
	plasma-restart='kquitapp5 plasmashell && sleep 1 && kstart5 plasmashell && sleep 1 && kwin_wayland --replace &' \
    editkitty='nvim ~/.config/kitty/kitty.conf'


# Color or human readable
alias \
	ip='ip --color=auto' \
	grep='grep --color' \
	df='df -h' \
	du='du -h'

# So that I don't forgot to ask for sudo privileges
for command in mount umount ; do
	alias $command="sudo $command"
done; unset command

function last-command {
    clear
    zle up-history
    zle accept-line
}
zle -N last-command

bindkey -M viins '^R' last-command
bindkey -M vicmd '^R' last-command

function gacp() {
    command git add . && git commit -m "$@" && git push origin master
}

# function neo() {
#   command neovide "$@" & disown && sleep 1 ; exit
# }

# Extracting files
ex ()
{
  if [ -f $1 ] ; then
    case $1 in
      *.tar.bz2)   tar xjf $1   ;;
      *.tar.gz)    tar xzf $1   ;;
      *.tar.xz)    tar xJf $1   ;;
      *.bz2)       bunzip2 $1   ;;
      *.rar)       unrar x $1     ;;
      *.gz)        gunzip $1    ;;
      *.tar)       tar xf $1    ;;
      *.tbz2)      tar xjf $1   ;;
      *.tgz)       tar xzf $1   ;;
      *.zip)       unzip $1     ;;
      *.Z)         uncompress $1;;
      *.7z)        7z x $1      ;;
      *)           echo "'$1' cannot be extracted via ex()" ;;
    esac
  else
    echo "'$1' is not a valid file"
  fi
}
