#!/bin/sh

fpath_completion=/usr/share/zsh/site-functions/_*
fpath+="$(dirname "${fpath_completion}")"
unset fpath_completion

# What should be the normal behaviour
alias \
    sn='sudo -E nvim' \
    n='nvim' \
    no='nvim $(fzf)' \
    zzz='systemctl suspend' \
    cd..='cd ..' \
    cp='cp -iv' \
    mv='mv -iv' \
    rm='rm -v' \
    rd='rmdir' \
    l='ls -lAhX --group-directories-first --color=auto' \
    ls='ls -F --color=auto' \
    e='exa -lah --icons --colour-scale --group-directories-first --git' \
    et='exa -lah --icons --colour-scale --group-directories-first --git -T -L4' \
    bat='bat --theme TwoDark --italic-text=always' \
    plasma-restart='kquitapp5 plasmashell && sleep 1 && kstart5 plasmashell && sleep 1 && kwin_wayland --replace &' \
    editkitty='nvim ~/.config/kitty/kitty.conf' \
    d='dirs -v'
    for index ({1..9}) alias "$index"="cd +${index}"; unset index


# Color or human readable
alias \
    ip='ip --color=auto' \
    grep='grep --color' \
    df='df -h' \
    du='du -h' \
    free='free -mh'

function last-command {
    clear
    zle up-history
    zle accept-line
}
zle -N last-command

bindkey -M viins '^[h' last-command
bindkey -M vicmd '^[h' last-command

function gacp() {
    command git add . && git commit -m "$@" && git push origin master
}

# Extracting files
ex ()
{
  if [ -f $1 ] ; then
    case $1 in
      *.tar.bz2)   tar xjf $1   ;;
      *.tar.gz)    tar xzf $1   ;;
      *.tar.xz)    tar xJf $1   ;;
      *.bz2)       bunzip2 $1   ;;
      *.rar)       unrar x $1   ;;
      *.gz)        gunzip $1    ;;
      *.tar)       tar xf $1    ;;
      *.tbz2)      tar xjf $1   ;;
      *.tgz)       tar xzf $1   ;;
      *.zip)       unzip $1     ;;
      *.Z)         uncompress $1;;
      *.7z)        7z x $1      ;;
      *)           echo "'$1' cannot be extracted via ex()" ;;
    esac
  else
    echo "'$1' is not a valid file"
  fi
}
