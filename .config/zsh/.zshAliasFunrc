# What should be the normal behaviour
alias \
    sn='sudo -E nvim' \
    n='nvim' \
    cd..='cd ..' \
    cp='cp -iv' \
    mv='mv -iv' \
    rm='rm -v' \
    rd='rmdir' \
    l='ls -lAhX --group-directories-first --color=auto' \
    ls='ls -F --color=auto' \
    e='exa -lah --icons --colour-scale --group-directories-first --git' \
    et='exa -lah --icons --colour-scale --group-directories-first --git -T -L4' \
    bat='bat --italic-text=always' \
    plasma-restart='kquitapp5 plasmashell && sleep 1 && kstart5 plasmashell && sleep 1 && kwin_wayland --replace &' \
    editkitty='nvim ~/.config/kitty/kitty.conf' \
    d='dirs -v'
    for index ({1..33}) alias "$index"="cd +${index}"; unset index

# Color or human readable
alias \
    ip='ip --color=auto' \
    grep='grep --color' \
    df='df -h' \
    du='du -h' \
    free='free -mh'

function no {
    nvim $(fzf --preview '([[ -f {} ]] && (bat --style=numbers --color=always {} || cat {})) || ([[ -d {} ]] && (exa -1T -L 8 {} | less)) || echo {} 2> /dev/null | head -200')
}
zle -N no
autoload -Uz no

function last-command {
    clear
    zle up-history
    zle accept-line
}
zle -N last-command

bindkey -M viins '^[h' last-command
bindkey -M vicmd '^[h' last-command

bindkey '^k' history-beginning-search-backward # Ctrl + k to search in insert mode
bindkey '^j' history-beginning-search-forward # Ctrl + j to search in insert mode

autoload -Uz last-command

function gacp() {
    command git add . && git commit -m "$@" && git push origin master
}

function okular-disown() {
    okular "$@" &; disown
}

# Note-JBS
function note-jbs-f() {
    note-jbs -f
}
zle -N note-jbs-f

bindkey -M viins '^[n' note-jbs-f
bindkey -M vicmd '^[n' note-jbs-f

# Extracting files
ex ()
{
  if [ -f $1 ] ; then
    case $1 in
      *.tar.bz2)   tar xjf $1   ;;
      *.tar.gz)    tar xzf $1   ;;
      *.tar.xz)    tar xJf $1   ;;
      *.bz2)       bunzip2 $1   ;;
      *.rar)       unrar x $1   ;;
      *.gz)        gunzip $1    ;;
      *.tar)       tar xf $1    ;;
      *.tbz2)      tar xjf $1   ;;
      *.tgz)       tar xzf $1   ;;
      *.zip)       unzip $1     ;;
      *.Z)         uncompress $1;;
      *.7z)        7z x $1      ;;
      *)           echo "'$1' cannot be extracted via ex()" ;;
    esac
  else
    echo "'$1' is not a valid file"
  fi
}
zle -N ex
autoload -Uz ex

